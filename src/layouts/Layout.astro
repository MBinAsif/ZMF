---
import '@fontsource/poppins';
import '@fontsource/open-sans';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Zariya e Muash - Building Pathways to Prosperity" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Zariya e Muash</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="font-open-sans">
    <header class="bg-white shadow-md fixed w-full top-0 z-50">
      <nav class="container mx-auto px-4 py-4 flex justify-between items-center relative">
        <a href="/" class="relative flex items-center group">
          <img
            src="/logo.png"
            alt="Logo"
            class="w-16 h-16 object-contain transition-all duration-300 ease-out group-hover:shadow-lg rounded-full"
          />
        </a>
        <button
          class="md:hidden text-gray-700 focus:outline-none"
          aria-label="Toggle menu"
          id="menu-toggle"
        >
          <svg class="w-6 h-6 transition-transform duration-300 ease-out" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        <div class="nav-menu md:flex absolute md:static top-full left-0 w-full md:w-auto bg-white md:bg-transparent shadow-md md:shadow-none transition-all duration-300 ease-in-out">
          <div class="md:flex md:items-center px-4 py-6 md:p-0 md:gap-8">
            <a href="/about" class="block md:inline-block text-gray-700 py-2 md:py-0 relative group transition-all duration-300 ease-out">
              <span class="group-hover:text-primary">About Us</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300 ease-out"></span>
            </a>
            <a href="/programs" class="block md:inline-block text-gray-700 py-2 md:py-0 relative group transition-all duration-300 ease-out">
              <span class="group-hover:text-primary">Programs</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300 ease-out"></span>
            </a>
            <a href="/success-stories" class="block md:inline-block text-gray-700 py-2 md:py-0 relative group transition-all duration-300 ease-out">
              <span class="group-hover:text-primary">Success Stories</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300 ease-out"></span>
            </a>
            <a href="/get-involved" class="block md:inline-block text-gray-700 py-2 md:py-0 relative group transition-all duration-300 ease-out">
              <span class="group-hover:text-primary">Get Involved</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300 ease-out"></span>
            </a>
            <a href="/contact" class="block md:inline-block text-gray-700 py-2 md:py-0 relative group transition-all duration-300 ease-out">
              <span class="group-hover:text-primary">Contact</span>
              <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-primary group-hover:w-full transition-all duration-300 ease-out"></span>
            </a>
          </div>
        </div>
        <a
          href="/donate"
          class="relative bg-primary text-white px-6 py-2 rounded-full overflow-hidden group transition-all duration-300 ease-out hover:bg-primary-dark"
        >
          <span class="relative z-10 font-semibold">Donate Now</span>
          <span class="absolute inset-0 bg-primary-dark opacity-0 group-hover:opacity-30 transition-opacity duration-300 ease-out"></span>
        </a>
      </nav>
    </header>

    <main class="mt-20">
      <slot />
    </main>

    <footer class="bg-primary-dark text-white mt-20">
      <!-- Existing footer content unchanged -->
      <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="font-poppins font-bold text-xl mb-4">Zariya e Muash</h3>
            <p class="text-sm">Building Pathways to Prosperity</p>
          </div>
          <div>
            <h4 class="font-poppins font-bold mb-4">Quick Links</h4>
            <ul class="space-y-2">
              <li><a href="/about" class="hover:text-primary-light">About Us</a></li>
              <li><a href="/programs" class="hover:text-primary-light">Our Programs</a></li>
              <li><a href="/success-stories" class="hover:text-primary-light">Success Stories</a></li>
              <li><a href="/contact" class="hover:text-primary-light">Contact Us</a></li>
            </ul>
          </div>
          <div>
            <h4 class="font-poppins font-bold mb-4">Contact</h4>
            <ul class="space-y-2 text-sm">
              <li>
                üìß <a href="mailto:info@zariyaemuash.com" class="hover:underline">
                  info@zariyaemuash.com
                </a>
              </li>
              <li>
                üì± <a href="https://wa.me/923061515313" target="_blank" class="hover:underline">
                  +92 306 1515313
                </a>
              </li>
              <li>
                üìç <a href="https://maps.app.goo.gl/iRZ58gC1oS4GqP2B9" target="_blank" class="hover:underline">
                  Plot no 167A, Backside of Doctor Hospital, Block G1 Block G 1 Phase 1 Johar Town, Lahore, Pakistan
                </a>
              </li>
            </ul>
          </div>
          <div>
            <h4 class="font-poppins font-bold mb-4">Newsletter</h4>
            <form class="space-y-2">
              <input
                type="email"
                placeholder="Enter your email"
                class="w-full px-4 py-2 rounded text-gray-800"
              />
              <button class="bg-primary text-white px-6 py-2 rounded hover:bg-primary-light w-full">
                Subscribe
              </button>
            </form>
          </div>
        </div>
        <div class="border-t border-primary-light mt-8 pt-8 text-center text-sm">
          <p>¬© 2024 Zariya e Muash. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      import Scrollbar from 'smooth-scrollbar';

      // Initialize smooth scrolling on body
      document.addEventListener("DOMContentLoaded", () => {
        Scrollbar.init(document.body, {
          damping: 0.1, // Smoothness (lower = smoother, slower)
          thumbMinSize: 20,
          renderByPixels: true,
          alwaysShowTracks: false,
          continuousScrolling: true,
        });

        // Existing menu toggle logic
        const menuToggle = document.getElementById('menu-toggle');
        const navMenu = document.querySelector('.nav-menu');
        const menuOpen = document.querySelector('.menu-open');
        const menuClose = document.querySelector('.menu-close');

        menuToggle.addEventListener('click', () => {
          navMenu.classList.toggle('hidden');
          menuOpen.classList.toggle('hidden');
          menuClose.classList.toggle('hidden');
        });
      });
    </script>

    <style>
      /* Ensure body and html work with smooth-scrollbar */
      html, body {
        height: 100%;
        overflow: hidden; /* Required for smooth-scrollbar */
      }
      main {
        overflow: visible;
      }
      /* Smooth Mobile Menu Transition */
      .nav-menu {
        transform-origin: top;
      }
      .nav-menu.hidden {
        opacity: 0;
        transform: scaleY(0);
      }
      .nav-menu:not(.hidden) {
        opacity: 1;
        transform: scaleY(1);
      }
    </style>
  </body>
</html>