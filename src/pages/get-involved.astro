---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Get Involved">
  <!-- Hero Section -->
  <section class="relative h-[400px] flex items-center">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1559027615-cd4628902d4a"
        alt="Get Involved Hero"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="container mx-auto px-4 relative text-white">
      <h1 class="font-poppins text-5xl font-bold mb-4">Get Involved</h1>
      <p class="text-xl max-w-2xl">Join us in making a difference in communities across Pakistan</p>
    </div>
  </section>

  <!-- Ways to Help -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {
            title: 'Volunteer',
            icon: 'ðŸ¤',
            description: 'Share your time and skills to support our programs.',
            link: '#volunteer-form'
          },
          {
            title: 'Partner With Us',
            icon: 'ðŸ¤²',
            description: 'Collaborate with us as an organization or business.',
            link: '#partnership'
          },
          {
            title: 'Spread the Word',
            icon: 'ðŸ“¢',
            description: 'Help us reach more people by sharing our mission.',
            link: '#share'
          }
        ].map((way) => (
          <div class="bg-white rounded-lg shadow-lg p-8 text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-6">
              <span class="text-white text-2xl">{way.icon}</span>
            </div>
            <h3 class="font-poppins font-bold text-xl mb-4">{way.title}</h3>
            <p class="text-gray-600 mb-6">{way.description}</p>
            <a
              href={way.link}
              class="inline-block bg-primary text-white px-6 py-2 rounded-full hover:bg-primary-dark transition"
            >
              Learn More
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Volunteer Form -->
  <section id="volunteer-form" class="py-20 bg-secondary">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-poppins font-bold text-center mb-12">Volunteer Application</h2>
        <div class="bg-white rounded-lg shadow-lg p-8">
          <form class="space-y-6">
            <!-- Personal Information -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-gray-700 mb-2">First Name</label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                />
              </div>
              <div>
                <label class="block text-gray-700 mb-2">Last Name</label>
                <input
                  type="text"
                  class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                />
              </div>
            </div>

            <div>
              <label class="block text-gray-700 mb-2">Email</label>
              <input
                type="email"
                class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
              />
            </div>

            <div>
              <label class="block text-gray-700 mb-2">Phone</label>
              <input
                type="tel"
                class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
              />
            </div>

            <!-- Skills and Interests -->
            <div>
              <label class="block text-gray-700 mb-2">Areas of Interest</label>
              <div class="grid grid-cols-2 gap-4">
                {[
                  'Education',
                  'Healthcare',
                  'Environment',
                  'Food Distribution',
                  'Women Empowerment',
                  'Youth Development'
                ].map((interest) => (
                  <label class="flex items-center space-x-2">
                    <input type="checkbox" class="form-checkbox text-primary" />
                    <span>{interest}</span>
                  </label>
                ))}
              </div>
            </div>

            <div>
              <label class="block text-gray-700 mb-2">Skills</label>
              <textarea
                rows="4"
                class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                placeholder="Tell us about your skills and experience..."
              ></textarea>
            </div>

            <!-- Availability -->
            <div>
              <label class="block text-gray-700 mb-2">Availability</label>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                {[
                  'Weekday Mornings',
                  'Weekday Afternoons',
                  'Weekday Evenings',
                  'Weekend Mornings',
                  'Weekend Afternoons',
                  'Weekend Evenings'
                ].map((time) => (
                  <label class="flex items-center space-x-2">
                    <input type="checkbox" class="form-checkbox text-primary" />
                    <span>{time}</span>
                  </label>
                ))}
              </div>
            </div>

            <button
              type="submit"
              class="w-full bg-primary text-white px-8 py-4 rounded-lg font-bold hover:bg-primary-dark transition"
            >
              Submit Application
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Partnership Section -->
  <section id="partnership" class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-poppins font-bold text-center mb-12">Partner With Us</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Partnership Types -->
        <div class="relative pt-8 pb-12">
          <h3 class="font-poppins font-bold text-xl mb-6">
            Types of Partnerships
          </h3>
          <div data-bolt-action="true" data-file-path="src/pages/get-involved.astro">
            <div class="grid grid-col-3 md:grid-cols-2 gap-8 px-10 max-w-7xl mx-auto">
              {[
                {
                  title: 'Corporate Partnerships',
                  description: 'Partner with us through CSR initiatives, employee engagement programs, or direct support.',
                  icon: 'ðŸ¢'
                },
                {
                  title: 'Academic Institutions',
                  description: 'Collaborate on research, internships, and student volunteer programs.',
                  icon: 'ðŸŽ“'
                },
                {
                  title: 'NGO Partnerships',
                  description: 'Join forces to create greater impact through collaborative programs.',
                  icon: 'ðŸ¤'
                }
              ].map((type) => (
                <div class="relative bg-[#1C1C1E] backdrop-blur-xl border border-[#2A2A2E] rounded-3xl p-10 shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-105 w-full">
                  <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-[#ffffff0d] to-[#ffffff00] rounded-3xl"></div>
                  <div class="relative flex items-center gap-6 mb-6">
                    <div class="w-20 h-20 bg-[#2A2A2E] border border-[#3A3A3E] rounded-full flex items-center justify-center shadow-xl">
                      <span class="text-[#EAEAEA] text-4xl">{type.icon}</span>
                    </div>
                    <h4 class="font-poppins font-semibold text-2xl text-[#EAEAEA]">{type.title}</h4>
                  </div>
                  <p class="text-[#B3B3B3] leading-relaxed text-lg relative z-10">{type.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>

        </div>
        <!-- Partnership Benefits -->
        <div>
          <h3 class="font-poppins font-bold text-xl mb-6">Partnership Benefits</h3>
          <div class="space-y-4">
            {[
              'Access to our network of community organizations',
              'Recognition on our website and publications',
              'Regular impact reports and updates',
              'Customized engagement opportunities',
              'Joint media and PR opportunities',
              'Tax benefits for eligible contributions'
            ].map((benefit) => (
              <div class="flex items-center">
                <div class="w-6 h-6 bg-primary rounded-full flex items-center justify-center mr-4">
                  <span class="text-white text-sm">âœ“</span>
                </div>
                <p>{benefit}</p>
              </div>
            ))}
          </div>
          <div class="mt-8">
            <a
              href="/contact"
              class="inline-block bg-primary text-white px-8 py-3 rounded-full hover:bg-primary-dark transition"
            >
              Discuss Partnership
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Success Stories -->
  <section class="py-20 bg-secondary">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-poppins font-bold text-center mb-12">Volunteer Stories</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[1, 2, 3].map((story) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <img
              src={`https://source.unsplash.com/random/400x300?volunteer,${story}`}
              alt={`Volunteer Story ${story}`}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="font-poppins font-bold text-xl mb-2">Making a Difference</h3>
              <p class="text-gray-600 mb-4">
                "Volunteering with Zariya e Muash has been an incredible journey of personal growth
                and community impact."
              </p>
              <p class="text-primary font-semibold">- Volunteer Name</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>