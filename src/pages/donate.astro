---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Donate">
  <!-- Hero Section -->
  <section class="relative h-[400px] flex items-center">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1532629345422-7515f3d16bb6"
        alt="Donate Hero"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="container mx-auto px-4 relative text-white">
      <h1 class="font-poppins text-5xl font-bold mb-4">Make a Difference</h1>
      <p class="text-xl max-w-2xl">Your support helps us create lasting change in communities across Pakistan</p>
    </div>
  </section>

  <!-- Donation Form -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-3xl font-poppins font-bold mb-8 text-center">Choose Your Donation</h2>
          
          <!-- Amount Selection -->
          <div class="mb-8">
            <h3 class="font-poppins font-bold mb-4">Select Amount</h3>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              {[10, 25, 50, 100].map((amount) => (
                <button class="bg-secondary hover:bg-primary hover:text-white transition px-6 py-3 rounded-lg font-bold">
                  ${amount}
                </button>
              ))}
            </div>
            <div class="mt-4">
              <input
                type="number"
                placeholder="Custom Amount"
                class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
              />
            </div>
          </div>

          <!-- Donation Type -->
          <div class="mb-8">
            <h3 class="font-poppins font-bold mb-4">Donation Type</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <button class="bg-primary text-white px-6 py-3 rounded-lg font-bold hover:bg-primary-dark transition">
                One-time Donation
              </button>
              <button class="bg-secondary hover:bg-primary hover:text-white transition px-6 py-3 rounded-lg font-bold">
                Monthly Donation
              </button>
            </div>
          </div>

          <!-- Payment Information -->
          <div class="mb-8">
            <h3 class="font-poppins font-bold mb-4">Payment Information</h3>
            <div class="space-y-4">
              <div>
                <label class="block text-gray-700 mb-2">Card Number</label>
                <input
                  type="text"
                  placeholder="1234 5678 9012 3456"
                  class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                />
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-gray-700 mb-2">Expiry Date</label>
                  <input
                    type="text"
                    placeholder="MM/YY"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                  />
                </div>
                <div>
                  <label class="block text-gray-700 mb-2">CVV</label>
                  <input
                    type="text"
                    placeholder="123"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                  />
                </div>
              </div>
            </div>
          </div>

          <!-- Personal Information -->
          <div class="mb-8">
            <h3 class="font-poppins font-bold mb-4">Personal Information</h3>
            <div class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-gray-700 mb-2">First Name</label>
                  <input
                    type="text"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                  />
                </div>
                <div>
                  <label class="block text-gray-700 mb-2">Last Name</label>
                  <input
                    type="text"
                    class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                  />
                </div>
              </div>
              <div>
                <label class="block text-gray-700 mb-2">Email</label>
                <input
                  type="email"
                  class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:border-primary"
                />
              </div>
            </div>
          </div>

          <button class="w-full bg-primary text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-primary-dark transition">
            Complete Donation
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact Section -->
  <section class="py-20 bg-secondary">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-poppins font-bold text-center mb-12">Your Impact</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {
            amount: '$10',
            impact: 'Provides meals for a family for one day',
            icon: '🍲'
          },
          {
            amount: '$25',
            impact: 'Supports vocational training for one person',
            icon: '🎓'
          },
          {
            amount: '$50',
            impact: 'Funds medical supplies for a health camp',
            icon: '💊'
          }
        ].map((item) => (
          <div class="bg-white rounded-lg shadow-lg p-6 text-center">
            <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white text-2xl">{item.icon}</span>
            </div>
            <h3 class="font-poppins font-bold text-xl mb-2">{item.amount}</h3>
            <p class="text-gray-600">{item.impact}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-poppins font-bold text-center mb-12">Donor Stories</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {[
          {
            name: 'John Smith',
            role: 'Monthly Donor',
            image: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e',
            quote: 'Knowing that my monthly donation helps create sustainable change makes me proud to support Zariya e Muash.'
          },
          {
            name: 'Sarah Johnson',
            role: 'Corporate Partner',
            image: 'https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e',
            quote: 'The transparency and impact of Zariya e Muash\'s programs made it an easy decision to become a long-term supporter.'
          }
        ].map((testimonial) => (
          <div class="bg-white rounded-lg shadow-lg p-6">
            <div class="flex items-center mb-4">
              <img
                src={testimonial.image}
                alt={testimonial.name}
                class="w-16 h-16 rounded-full object-cover mr-4"
              />
              <div>
                <h3 class="font-poppins font-bold">{testimonial.name}</h3>
                <p class="text-primary">{testimonial.role}</p>
              </div>
            </div>
            <p class="text-gray-600 italic">"{testimonial.quote}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>